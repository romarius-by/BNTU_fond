@model BNTU_fond.Models.Building
@{
    ViewBag.Title = "Delete building";
}

<div class="header text-center">
    <h2>Are you sure you want to delete this building "@Model.Name" ?</h2>
</div>

@using (Html.BeginForm())
{
    <div class="body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.BuildingId)

        <div class="d-flex justify-content-between">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Index", "Building", null, new { @class = "btn btn-light" })
        </div>
    </div>
}