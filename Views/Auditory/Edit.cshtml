@model BNTU_fond.Models.Auditory
@{
    ViewBag.Title = "Edit auditory";
}

<div class="header">
    <h2>Edit auditory №@Model.AuditoryNum</h2>
</div>

@using (Html.BeginForm())
{
    <div class="body">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.AuditoryId)
        @Html.HiddenFor(model => model.FloorId)

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.AuditoryNum, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.AuditoryNum, new { htmlAttributes = new { @class = "form-control", required = "required" }, style = "width: 100%" })
                @Html.ValidationMessageFor(model => model.AuditoryNum, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Places, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Places, new { htmlAttributes = new { @class = "form-control", required = "required" }, style = "width: 100%" })
                @Html.ValidationMessageFor(model => model.Places, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Computers, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Computers, new { htmlAttributes = new { @class = "form-control", required = "required" }, style = "width: 100%" })
                @Html.ValidationMessageFor(model => model.Computers, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <input type="submit" value="Save" class="btn btn-success" />
            @Html.ActionLink("Back to List", "Index", "Auditory", new { id = Model.FloorId }, new { @class = "btn btn-light" })
        </div>
    </div>
}

